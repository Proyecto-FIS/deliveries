{
    "name": "backend",
    "version": "1.0.0",
    "description": "Backend for deliveries microservice",
    "scripts": {
        "start": "node -r dotenv/config source/boot.js dotenv_config_path=env/devel.env",
        "start:prod": "node -r dotenv/config source/boot.js dotenv_config_path=env/prod.env",
        "test": "jest ./test --silent",
        "coverage": "npm test -- --coverage"
    },
    "author": "danmarrod@github.com, jorgeous16@github.com",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.21.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "mongoose": "^5.11.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.18",
        "express-swagger-generator": "^1.1.17",
        "jest": "^26.6.3",
        "supertest": "^6.0.1"
    },
    "jest": {
        "globalSetup": "./test/setup.js",
        "collectCoverageFrom": [
            "./source/**/*.js"
        ],
        "testEnvironment": "node"
    }
}
